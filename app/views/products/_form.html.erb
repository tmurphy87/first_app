<%= form_with(model: product, id: "product", local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-4 col-md-offset-4">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, :class=>"form-control", type: "text", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, :class=>"form-control", type: "text", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :image_url %>
        <%= form.text_field :image_url, :class=>"form-control", type: "file", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :colour %><br>
        <%= form.text_field :colour, :class=>"form-control", type: "text", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :price %><br>
        <%= form.text_field :price, :class=>"form-control", type: "number", required: true %>
      </div>

      <div class="actions">
        <%= form.submit "Update", class:"btn btn-default", id: "submit_btn" %>
      </div>
      <% end %>  
    </div>
  </div>

  