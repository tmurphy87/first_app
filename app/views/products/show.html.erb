<p id="notice"><%= notice %></p>

<div class="container-fluid" id="page_wrap">
  <div class="row">
    <div class="col-xs-12 col-sm-6" id="img_card">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
    </div>
    <div class="col-xs-12 col-sm-6" id="product_card">
      <h2 class="product_title"><%= @product.name %></h2>
      <p><%= @product.colour %></p>
      <p><%= @product.description %></p>
      <p><span class="glyphicon glyphicon-usd"></span><strong><%= number_with_precision(@product.price, precision: 2) %></strong></p>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
