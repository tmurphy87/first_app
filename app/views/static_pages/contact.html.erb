<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url: "/static_pages/thank_you", local: "true") do |form| %>
  <div class="row">
    <div class="col-sm-4 col-md-offset-4">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name", required: true %>
      </div>        
      <div class="form-group">
        <%= form.label :email, "Email Address" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Enter Email", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", required: true, rows: "5" %>
      </div> 
      <%= form.submit "Send", class:"btn btn-default", id: "submit_btn" %>        
    </div>
  </div>
    
<% end %>

